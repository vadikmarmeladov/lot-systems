{
  "name": "lot-systems",
  "type": "module",
  "version": "0.0.2",
  "license": "MIT",
  "scripts": {
    "build": "yarn run client:build && yarn run server:build",
    "client:build": "yarn run-p client:css:build client:js:build",
    "server:build": "vite build --outDir dist/server --ssr server/index.js",
    "dev:local": "esr ./src/server/.ts",
    "server:watch": "nodemon",
    "client:js:build": "NODE_ENV=production esr ./scripts/build/client.build.ts -prod",
    "client:js:build:metafile": "esr ./scripts/build/client.build.ts -prod -metafile",
    "client:js:watch": "esr ./scripts/build/client.build.ts -dev -w",
    "client:css:build": "postcss ./src/client/index.css -o ./dist/client/css/index.css --no-map",
    "client:css:watch": "postcss ./src/client/index.css -o ./dist/client/css/index.css -w",
    "client:watch": "yarn run-p client:js:watch client:css:watch",
    "migrations:up": "node -r esbuild-register ./scripts/migrations.ts up",
    "production:run": "yarn run-p build migrations:up start",
    "fix": "prettier --write ./src",
    "start": "node ./dist/server/index.mjs"
  },
  "engines": {
    "node": ">=22.x",
    "yarn": ">=1.22.x"
  },
  "dependencies": {
    "@fastify/cookie": "^7.2.0",
    "@fastify/helmet": "^11.0.0",
    "@fastify/rate-limit": "^8.0.3",
    "@fastify/static": "^6.4.0",
    "@fastify/view": "^7.4.1",
    "@instructor-ai/instructor": "^1.5.0",
    "@nanostores/persistent": "^0.9.1",
    "@nanostores/react": "^0.4.1",
    "@nanostores/router": "^0.9.1",
    "axios": "^0.27.2",
    "dayjs": "^1.11.10",
    "dotenv": "^17.2.3",
    "ejs": "^3.1.9",
    "fastify": "^4.10.2",
    "iso-3166": "^4.3.0",
    "jsonwebtoken": "^9.0.1",
    "nanostores": "^0.9.0",
    "openai": "^4.52.0",
    "pg": "^8.11.3",
    "pg-hstore": "^2.3.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-query": "^3.39.3",
    "sequelize": "^6.29.0",
    "tailwind-merge": "^1.6.0",
    "typescript": "^4.7.4",
    "umzug": "^3.8.0",
    "uuid": "^9.0.0",
    "values.js": "^2.1.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@luncheon/esbuild-plugin-gzip": "^0.1.0",
    "@types/ejs": "^3.1.2",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/node": "^18.0.3",
    "@types/node-notifier": "^8.0.2",
    "@types/react": "^18.0.15",
    "@types/react-dom": "^18.0.6",
    "@types/seedrandom": "^3.0.8",
    "@types/sequelize": "^4.28.20",
    "autoprefixer": "^10.4.19",
    "cssnano": "^7.1.1",
    "esbuild": "^0.20.2",
    "esbuild-node-tsc": "^2.0.2",
    "esbuild-runner": "^2.2.1",
    "node-notifier": "^10.0.1",
    "node-watch": "^0.7.3",
    "nodemon": "^2.0.19",
    "npm-run-all": "^4.1.5",
    "pino-pretty": "^13.1.1",
    "postcss": "^8.4.31",
    "postcss-cli": "^11.0.0",
    "postcss-import": "^16.1.1",
    "postcss-nesting": "^13.0.2",
    "prettier": "^2.7.1",
    "sequelize-cli": "^6.6.2",
    "tailwindcss": "^3.1.6",
    "vite": "^7.1.9"
  }
}
