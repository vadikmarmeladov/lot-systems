{
  "compilerOptions": {
    "target": "es2020",
    "lib": ["es2020", "DOM"],
    "module": "ESNext",
    "allowJs": true,
    "removeComments": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "outDir": "dist/server",
    "strict": true,
    "baseUrl": "src",
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "moduleResolution": "Node",
    "skipLibCheck": true,
    "jsx": "react-jsx",
    "paths": {
      "#client": ["client"],
      "#client/*": ["client/*"],
      "#server": ["server"],
      "#server/*": ["server/*"],
      "#shared": ["shared"],
      "#shared/*": ["shared/*"]
    },
    "types": [
      "node",
      "argparse",
      "bluebird",
      "debug",
      "ejs",
      "estree",
      "ms",
      "prop-types",
      "react-dom",
      "seedrandom",
      "sequelize"
    ]
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}